@model WebApplication2.Models.Person
@{
    ViewData["Title"] = "Create";
}
<form method="post" asp-action="RspvForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h1>Формуляр за участие</h1>'
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <label class="col-3 m-1 form-control" asp-for="Name">Вашето име:</label>
                <input class="col-3 form-control m-1" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <label class="col-3 m-1 form-control" asp-for="Phone">Вашият телефонен номер:</label>
                <input class="col-3 form-control" asp-for="Phone"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
                <label class="col-3 m-1 form-control" asp-for="Email">Вашият имейл:</label>
                <input class="col-3 form-control" asp-for="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
                <label class="col-3 m-1 form-control" asp-for="IsAttending">Ще присъствате ли:</label>
                <select class="col-3 form-control"  asp-for="IsAttending">
                    <option class="col-3 form-control" value="True">Да</option>
                    <option class="col-3 form-control" value="False">Не</option>
                </select>
                <span asp-validation-for="IsAttending" class="text-danger"></span>
                <button type="submit" class="col-3 btn btn-primary m-1">Submit</button>
            </div>
            <div class="form-group row"> 
                <button asp-action="Index" class="col-3 btn btn-primary m-1">Back</button>
                <button class="col-3 btn btn-primary m-1"> <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Table">Списък на присъстващите</a></button>
            </div>
        </div>
    </div>
</form>
